<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/android_cle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:fontFamily="sans-serif-black"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/android_cle"
        android:textAppearance="@style/android_cle"/>

    <TextView
        android:id="@+id/this_is_a_s"
        android:layout_width="319dp"
        android:layout_height="84dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/android_cle"
        android:layout_marginTop="10dp"
        android:text="@string/this_is_a_s"
        android:textAppearance="@style/this_is_a_s"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.3sp"
        android:gravity="top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/this_is_a_s"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgstar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_star_outline_24" />

        <TextView
            android:id="@+id/starcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/updated_15_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated 15 hours ago"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="72dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:gravity="top"
            android:textSize="12dp"
            />

    </LinearLayout>
</RelativeLayout>